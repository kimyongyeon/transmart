<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
<LinearLayout
  android:orientation="vertical"
  android:padding="10dip"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
  
  <LinearLayout 
  	android:layout_weight="1"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent">
  	<EditText 
  		android:id="@+id/input_et1"
  		android:gravity="left|top"
  		android:lines="10"
  		android:layout_width="fill_parent"
  		android:layout_height="fill_parent"/>
  </LinearLayout>
  
  <LinearLayout 
  	android:orientation="horizontal"
  	android:layout_weight="1"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent">
  	<LinearLayout 
	  	android:layout_weight="1"
	  	android:layout_width="fill_parent"
	  	android:layout_height="fill_parent">
	  	<Button 
	  		android:id="@+id/input_bt4"
	  		android:text=""
	  		android:background="@drawable/mic_select"
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"/>
  	</LinearLayout>
  	<LinearLayout 
	  	android:layout_weight="1"
	  	android:layout_width="fill_parent"
	  	android:layout_height="fill_parent">
	  	<Button 
	  		android:id="@+id/input_bt1"
	  		android:text=""
	  		android:background="@drawable/delete_select"
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"/>
  	</LinearLayout>
  	<LinearLayout 
	  	android:layout_weight="1"
	  	android:layout_width="fill_parent"
	  	android:layout_height="fill_parent">
	  	<Button 
	  		android:id="@+id/input_bt2"
	  		android:text=""
	  		android:background="@drawable/translator_select"
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"/>
  	</LinearLayout>
	<LinearLayout 
	  	android:layout_weight="1"
	  	android:layout_width="fill_parent"
	  	android:layout_height="fill_parent">
	  	<Button 
	  		android:id="@+id/input_bt3"
	  		android:text=""
	  		android:background="@drawable/cancel_select"
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"/>	
  	</LinearLayout>
  </LinearLayout>
    
</LinearLayout>
</ScrollView>