<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@drawable/translator_main"
  android:orientation="vertical"
  android:gravity="center_horizontal"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
  <LinearLayout 
  	android:layout_marginTop="30dip"
  	android:id="@+id/trans_main_ll01"
  	android:background="@drawable/bubble_top"
  	android:orientation="vertical"
  	android:layout_width="300dip"
  	android:layout_height="150dip">
  	<TextView 
  		android:id="@+id/trans_main_tv05"
  		android:layout_marginTop="15dip"
  		android:layout_marginLeft="10dip"
  		android:layout_marginRight="10dip"
  		android:textColor="#000000"
  		android:hint="출발어 "
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"/>
  	<ScrollView
  		android:id="@+id/trans_main_sv01"
  		android:layout_marginBottom="13dip"
  		android:layout_width="fill_parent"
	  	android:layout_height="fill_parent">
		  	<LinearLayout 
		  		android:layout_width="fill_parent"
		  		android:layout_height="fill_parent">	
			  	<TextView 
  					android:textColor="#000000"
			  		android:id="@+id/trans_main_tv03"
			  		android:layout_marginLeft="10dip"
			  		android:layout_marginRight="10dip"
			  		android:hint=""
			  		android:layout_width="fill_parent"
			  		android:layout_height="fill_parent"/>	
			</LinearLayout>
  	</ScrollView>	
  </LinearLayout>
  
  <LinearLayout
  	android:layout_marginLeft="10dip"
  	android:layout_marginRight="10dip"
  	android:orientation="horizontal" 
  	android:gravity="center"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content">
  	<!-- 언어1 -->
  	<LinearLayout
  		android:id="@+id/trans_main_ll02"
  		android:layout_weight="2"
  		android:background="@drawable/button_2"
  		android:gravity="center"
  		android:orientation="horizontal"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content">
  		<ImageView
  			android:id="@+id/trans_main_iv01"
  			android:layout_marginLeft="10dip"
  			android:background="@drawable/english"
  			android:layout_width="25dip"
  			android:layout_height="25dip" 
  		/>
  		<TextView
  			android:id="@+id/trans_main_tv01"
  			android:layout_weight="1"
  			android:layout_marginLeft="5dip"
  			android:text="카탈로니아어" 
  			android:textSize="12sp"
  			android:textColor="#ffffff"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  		/>
  	</LinearLayout>	
  	<!-- 변경 -->
  	<LinearLayout
  		android:id="@+id/trans_main_ll03"
	  	android:background="@drawable/change_sign_select"
  		android:layout_weight="3"
  		android:gravity="center"
  		android:orientation="horizontal"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content">
	  	<ImageView
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"/>
  	</LinearLayout>
  	<!-- 언어2 -->
  	<LinearLayout
  		android:id="@+id/trans_main_ll04"
  		android:layout_weight="2"
  		android:background="@drawable/button_2"
  		android:gravity="center"
  		android:orientation="horizontal"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content">
  		<ImageView
	  		android:id="@+id/trans_main_iv02" 
  			android:layout_marginLeft="10dip"
  			android:background="@drawable/korean"
  			android:layout_width="25dip"
  			android:layout_height="25dip" 
  		/>
  		<TextView
  			android:id="@+id/trans_main_tv02"
  			android:layout_weight="1"
  			android:layout_marginLeft="5dip"
  			android:text="한국어" 
  			android:textSize="12sp"
  			android:textColor="#ffffff"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  		/>
  	</LinearLayout>	
  </LinearLayout>
  
  <LinearLayout 
  	android:background="@drawable/bubble_bottom"
  	android:gravity="center_horizontal"
  	android:layout_width="300dip"
  	android:layout_height="150dip"
  	android:orientation="vertical"
  	>
  	<TextView 
  		android:id="@+id/trans_main_tv06"
  		android:layout_marginTop="25dip"
  		android:layout_marginLeft="10dip"
  		android:layout_marginRight="10dip"
  		android:textColor="#000000"
  		android:hint="도착어 "
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"/>
  	<ScrollView 
  		android:layout_width="fill_parent"
	  	android:layout_height="fill_parent">
	  	<LinearLayout 
	  		android:layout_width="fill_parent"
	  		android:layout_height="fill_parent">
		  	<TextView 
		  		android:textColor="#000000"
  				android:layout_marginBottom="5dip"
		  		android:id="@+id/trans_main_tv04"
		  		android:layout_marginLeft="10dip"
		  		android:layout_marginRight="10dip"
		  		android:hint=""
		  		android:layout_weight="1"
		  		android:layout_width="fill_parent"
		  		android:layout_height="fill_parent"/>
	  	</LinearLayout>			
  	</ScrollView>
  </LinearLayout>
  
  <LinearLayout 
  	android:layout_marginTop="10dip"
  	android:gravity="center_horizontal"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:orientation="horizontal">
  	<LinearLayout
  		android:gravity="center"
  		android:layout_weight="1"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content">
	  	<Button
	  		android:id="@+id/trans_main_bt04"
	  		android:background="@drawable/main_send_small"
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content" 
	  	/>
  	</LinearLayout>
  	
  	<LinearLayout
  		android:gravity="center"
  		android:layout_weight="1"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content">
	  	<Button
	  		android:id="@+id/trans_main_bt01"
	  		android:background="@drawable/soundanim"
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content" 
	  	/>
  	</LinearLayout>
  	
  	<LinearLayout
  		android:gravity="center"
  		android:layout_weight="1"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content">
	  	<Button
	  		android:id="@+id/trans_main_bt02"
	  		android:background="@drawable/history_select"
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content" 
	  	/>
  	</LinearLayout>
  	
  	<LinearLayout
  		android:gravity="center"
  		android:layout_weight="1"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content">
	  	<Button
	  		android:id="@+id/trans_main_bt03"
	  		android:background="@drawable/setting_select"
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content" 
	  	/>
  	</LinearLayout>
  </LinearLayout>
    
</LinearLayout>
